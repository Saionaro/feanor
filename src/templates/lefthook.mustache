pre-commit:
  commands:
    linter-js:
      files: git diff --name-only @{push}
      glob: "*.js"
      run: {{runner}} lint:js {staged_files} --fix && git add {staged_files}

    linter-css:
      files: git diff --name-only @{push}
      glob: "*.{{stylesExt}}"
      run: {{runner}} lint:css {staged_files} --fix && git add {staged_files}

    prettier:
      files: git diff --name-only @{push}
      glob: "*.{js,{{stylesExt}}}"
      run: prettier {staged_files} --write && git add {staged_files}
