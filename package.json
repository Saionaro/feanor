{
  "name": "feanor",
  "version": "0.0.2",
  "description": "The tool for creating modern light static web sites.",
  "main": "./src/index.js",
  "bin": {
    "feanor": "./bin/feanor.js"
  },
  "scripts": {
    "lint": "eslint src",
    "publish:patch": "npm version patch && git push --follow-tags && npm publish"
  },
  "repository": "git@github.com:Saionaro/feanor.git",
  "bugs": {
    "url": "https://github.com/Saionaro/feanor/issues"
  },
  "homepage": "https://github.com/Saionaro/feanor",
  "author": "Saionaro <shibakow@gmail.com>",
  "keywords": [
    "static",
    "sites"
  ],
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.js": [
      "eslint --fix src",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0"
  },
  "dependencies": {
    "cross-spawn": "^6.0.5",
    "find-free-port": "^2.0.0",
    "mustache": "^3.0.1",
    "nanodelay": "^0.1.4",
    "opener": "^1.5.1",
    "yargs": "^13.2.2"
  }
}
